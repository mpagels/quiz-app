{
  "name": "quiz-app",
  "version": "1.0.0",
  "description": "A simple app with questions and answers",
  "main": "index.html",
  "scripts": {
    "start": "npm run sass && npm run babel && npm-run-all --parallel live-server sass:watch babel:watch",
    "serve": "serve .",
    "live-server": "live-server",
    "sass": "node-sass --output-style compressed src/scss/styles.scss styles.css",
    "sass:watch": "npm run sass -- -w",
    "babel": "babel src/js/ -d .",
    "babel:watch": "npm run babel -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpagels/quiz-app.git"
  },
  "author": "Martin Pagels",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mpagels/quiz-app/issues"
  },
  "homepage": "https://github.com/mpagels/quiz-app#readme",
  "dependencies": {
    "live-server": "^1.2.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "serve": "^11.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5"
  }
}
